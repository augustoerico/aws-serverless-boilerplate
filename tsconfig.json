{
  "compilerOptions": {
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2017",
      "outDir": "lib",
      "strict": true,
      "baseUrl": "./src",
      "esModuleInterop": true,
      "types": ["reflect-metadata", "jasmine"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules/**"]
}